@rendermode InteractiveServer
<MudSnackbarProvider />
<h6 class="text-white text-xl font-bold lg:text-3xl text-center px-2 py-4 w-full mx-auto -mt-1">
    CREATE LAUNCHPAD
</h6>
<div class="w-full grid grid-cols-1 lg:grid-cols-1 gap-4">
    <MudItem>
        <MudTimeline TimelineOrientation="TimelineOrientation.Horizontal" TimelinePosition="TimelinePosition.Top" Reverse="true">
            <MudTimelineItem>
                <MudText Style="color:#ffff">Verify Token</MudText>
            </MudTimelineItem>
            <MudTimelineItem DotStyle="background-color: #6DC4E3">
                <MudText Style="color:#ffff">DeFi Launchpad Info</MudText>
            </MudTimelineItem>
            <MudTimelineItem>
                <MudText Style="color:#ffff">Add Additional Info</MudText>
            </MudTimelineItem>
            <MudTimelineItem>
                <MudText Style="color:#ffff">Finish</MudText>
            </MudTimelineItem>
        </MudTimeline>
    </MudItem>
    <div class="w-full grid grid-cols-1 lg:grid-cols-1 gap-10">
        <div class="mx auto rounded-md bg-hr w-full border-1  shadow-lg items-center justify-between" style="border:1px">
            <div class="mt-1 w-full p-4">
                <div class="flex flex-col items-center">
                    <h1 class="text-white text-xl lg:text-3xl text-center px-2 py-10 w-fit mx-auto -mt-7">
                        Enter the launchpad information that you want to raise , that should be enter all details about your presale.
                    </h1>
                </div>
                <div class="mt-4 ">
                    <MudGrid Spacing="1">
                        <MudItem xs="12">
                            <p>
                                <span class="text-white">Select Coin</span>
                                <span class="text-danger">*</span>
                                <span class="text-info">(Which coin is available for the token sell?)</span>
                            </p>
                        </MudItem>
                        <MudItem xs="12">
                            <MudMenu Class="pb-2" StartIcon="@Icons.Material.Filled.CurrencyExchange" EndIcon="@Icons.Material.Filled.KeyboardArrowDown" Label="Currencies" Color="Color.Primary" Variant="Variant.Filled">
                                @foreach (var currency in Currencies)
                                {
                                    <MudNavMenu Style="background-color:#272B37" Color="Color.Primary">
                                        <MudNavGroup Title="@currency.Symbol" Style="color:white">
                                            <MudItem xs="6">
                                                <MudCheckBox T="bool" @bind-Value="@currency.IsSelected" Color="Color.Primary">
                                                    <MudTextField Style="color:black" @bind-Value="@currency.Rate" Label="Rate" Variant="Variant.Outlined"></MudTextField>
                                                </MudCheckBox>
                                            </MudItem>
                                        </MudNavGroup>
                                    </MudNavMenu>
                                }
                            </MudMenu>
                        </MudItem>
                        <MudItem xs="6">
                            <MudItem xs="12" Class="pb-2">
                                <p>
                                    <span class="text-white">SoftCap (MATIC)</span>
                                    <span class="text-danger">*</span>
                                    <span class="text-info">(Softcap must be >= 15% of Hardcap!)</span>
                                </p>
                            </MudItem>
                            <MudItem xs="12" Class="pb-2">
                                <input type="text" title="" required placeholder="0"
                                       class=" bg-pr border-none outline-none w-full px-2 py-2 text-white rounded-md" @bind="Presale.PoolState.Value.SoftCap" />
                            </MudItem>
                        </MudItem>
                        <MudItem xs="6">
                            <MudItem xs="12" Class="pb-2">
                                <p>
                                    <span class="text-white">HardCap (MATIC)</span>
                                    <span class="text-danger">*</span>
                                </p>
                            </MudItem>
                            <MudItem xs="12" Class="pb-2">
                                <input type="text" title="" required placeholder="0"
                                       class=" bg-pr border-none outline-none w-full px-2 py-2 text-white rounded-md" @bind="Presale.PoolState.Value.HardCap" />
                            </MudItem>
                        </MudItem>
                        <MudItem xs="6">
                            <MudItem xs="12" Class="pb-2">
                                <p>
                                    <span class="text-white">Minimum buy (MATIC)</span>
                                    <span class="text-danger">*</span>
                                </p>
                            </MudItem>
                            <MudItem xs="12" Class="pb-2">
                                <input type="text" title="" required placeholder="0"
                                       class=" bg-pr border-none outline-none w-full px-2 py-2 text-white rounded-md" @bind="Presale.PoolState.Value.MinimumBuy" />
                            </MudItem>
                        </MudItem>
                        <MudItem xs="6">
                            <MudItem xs="12" Class="pb-2">
                                <p>
                                    <span class="text-white">Maximum buy (MATIC)</span>
                                    <span class="text-danger">*</span>
                                </p>
                            </MudItem>
                            <MudItem xs="12" Class="pb-2">
                                <input type="text" title="" required placeholder="0"
                                       class=" bg-pr border-none outline-none w-full px-2 py-2 text-white rounded-md" @bind="Presale.PoolState.Value.MaximumBuy" />
                            </MudItem>
                        </MudItem>
                        <MudItem xs="12" Class="pt-5 pb-2">
                            <p>
                                <span class="text-white">Select start time & end time (LocalTime)*</span>
                            </p>
                        </MudItem>
                        <MudItem xs="6">
                            <MudItem xs="12" Class="pb-2">
                                <p>
                                    <span class="text-white">Start time (LocalTime)</span>
                                    <span class="text-danger">*</span>
                                </p>
                            </MudItem>
                            <MudItem xs="6" Class="pb-2">
                                <MudDatePicker Class="text-white" PickerVariant="PickerVariant.Dialog" @bind-Date="Presale.PoolState.Value.StartTime" />
                            </MudItem>
                        </MudItem>
                        <MudItem xs="6">
                            <MudItem xs="12" Class="pb-2">
                                <p>
                                    <span class="text-white">End time (LocalTime)</span>
                                    <span class="text-danger">*</span>
                                </p>
                            </MudItem>
                            <MudItem xs="6" Class="pb-2">
                                <MudDatePicker Class="text-white" PickerVariant="PickerVariant.Dialog" @bind-Date="Presale.PoolState.Value.EndTime" />
                            </MudItem>
                        </MudItem>
                        <MudItem xs="4">
                        </MudItem>
                        <MudItem xs="2" Class="pt-10">
                            <button type="button"
                                    class="mx-auto w-full flex inline-block px-4 py-2.5 bg-blue-600 text-white font-bold text-base menu-btn leading-tight shadow-md hover:bg-blue-700 hover:shadow-lg hover:bg-blue-700 focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out"
                                    @onclick="Presale.BackToPreviousStep">
                                Back
                            </button>
                        </MudItem>
                        <MudItem xs="2" Class="pt-10">
                            <button type="button"
                                    class="mx-auto w-full flex inline-block px-4 py-2.5 bg-blue-600 text-white font-bold text-base menu-btn leading-tight shadow-md hover:bg-blue-700 hover:shadow-lg hover:bg-blue-700 focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out"
                                    @onclick="ContinueBtn">
                                Continue
                            </button>
                        </MudItem>

                    </MudGrid>
                </div>
            </div>
        </div>
    </div>
</div>
